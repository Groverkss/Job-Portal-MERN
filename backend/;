const jwt = require('jsonwebtoken')

const authCheck = (req, res, next) => {
  try {
    const token = req.header("auth-token");
    if (!token)
      return res
        .status(401)
    const verified = jwt.verify(token, process.env.JWT_SECRET);
    if (!verified)
      return res
        .status(401)
    req.user = verified.id;
    next();
  } catch (e => {
    next(e);
  })
}
